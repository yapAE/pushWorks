<!--pages/techer/techer.wxml-->
<view class="cu-bar bg-white solid-bottom">
  <view class='action'>
    <text class='cuIcon-titles text-orange '></text> 班级列表
  </view>
  <view class='action'>
  </view>
</view>

	<view class="cu-form-group">
		<view class="title">地区选择</view>
		<picker mode="region" bindchange="RegionChange" value="{{region}}" custom-item="{{customItem}}">
			<view class="picker">
				{{region[0]}}，{{region[1]}}，{{region[2]}}
			</view>
		</picker>
	</view>

  	<view class="cu-form-group">
		<view class="title">学校名称</view>
		<input placeholder="请输入学校名称" bindinput='inputSchoolName'></input>
	</view>

  	<view class="cu-form-group">
		<view class="title">班级名称</view>
		<input placeholder="请输入班级名称" bindinput='inputClassName'></input>
	</view>

	<view class="cu-form-group margin-top">
		<view class="title">入学年度</view>
		<picker bindchange="EnrollmentYearChange" value="{{index}}" range="{{enrollment}}">
			<view class="picker">
				{{index?enrollment[index]:'请选择班级入学年度'}}
			</view>
		</picker>
	</view>

<view class="box cu-bar btn-group"role=""aria-label="">
<button class="cu-btn bg-green shadow-blur round" role="button" bindtap='addClass' aria-disabled="false">新建班级</button>
</view>
