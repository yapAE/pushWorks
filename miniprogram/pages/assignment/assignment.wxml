
<view class="cu-bar bg-white solid-bottom">
  <view class='action'>
    <text class='cuIcon-titles text-orange '></text> {{parentId?'提交作业':'布置作业'}}
  </view>
  </view>
  	<!-- 表单 -->
<form>

	<view class="cu-form-group margin-top">
		<view class="title">标题</view>
		<input placeholder="作业主题" bindinput='bindInputTitle'></input>
	</view>

  	<!-- !!!!! placeholder 在ios表现有偏移 建议使用 第一种样式 -->
	<view class="cu-form-group margin-top">
		<textarea maxlength="-1"  bindinput="bindInputContent" placeholder="请输入作业要求"></textarea>
	</view>

    	<!-- 图片上传 -->
	<view class="cu-bar bg-white margin-top">
		<view class="action">
			图片上传
		</view>
		<view class="action">
			{{imgList.length}}/4
		</view>
	</view>
	<view class="cu-form-group">
		<view class="grid col-4 grid-square flex-sub">
			<view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
				<image src='{{imgList[index]}}' mode='aspectFill'></image>
				<view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
					<text class="cuIcon-close"></text>
				</view>
			</view>
			<view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<4}}">
				<text class="cuIcon-cameraadd"></text>
			</view>
		</view>
	</view>

  <view class="cu-bar btn-group box">
    <button class="cu-btn bg-green shadow-blur round lg" bindtap='submitWork'>保存</button>
  </view>

  </form>